# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=$SCRIPT_DIR/$BLOCK_NAME
separator_block_width=15
markup=none

[music]
command=playerctl -p cider metadata -f "{{xesam:artist}} - {{xesam:title}}"
interval=5
signal=10
align=center
min_width=1040
separator=false

[weather]
command=sh $HOME/.config/i3blocks/scripts/weather.sh
interval=120
align=center
markup=pango

[volume]
command=sh $HOME/.config/i3blocks/scripts/volume
interval=1
markup=pango

[cpu]
command=$HOME/.config/i3blocks/scripts/cpu
interval=repeat
color=#89b4fa
# border=#a6e3a1
border_right=0
border_left=0
border_top=0
border_bottom=0
markup=pango

[mem]
command=$HOME/.config/i3blocks/scripts/mem
interval=repeat
color=#fab387
# border=#a6e3a1
border_right=0
border_left=0
border_top=0
border_bottom=0
markup=pango


[battery]

[time]
command=date '+%Y-%m-%d %I:%M%p'
interval=5

