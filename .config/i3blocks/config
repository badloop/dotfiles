# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=$SCRIPT_DIR/$BLOCK_NAME
separator_block_width=15
markup=none

[music]
command=playerctl -p cider2 metadata -f "{{xesam:artist}} - {{xesam:title}}"
interval=5
signal=10
align=center
min_width=1450
separator=false

[mouse]
command=$HOME/.config/i3/scripts/mouse
interval=60
markup=pango

[notify]
command=$HOME/.config/i3/scripts/notify
interval=5
markup=pango

[weather]
command=$SCRIPT_DIR/weather.sh; if [ "${BLOCK_BUTTON}" = "1" ]; then i3-msg "exec --no-startup-id $SCRIPT_DIR/forecast.py"; fi
interval=120
align=center
markup=pango

[volume]
command=sh $SCRIPT_DIR/volume
interval=1
markup=pango

[cpu]
command=$SCRIPT_DIR/cpu
interval=repeat
color=#89b4fa
# border=#a6e3a1
border_right=0
border_left=0
border_top=0
border_bottom=0
markup=pango

[mem]
command=$SCRIPT_DIR/mem
interval=repeat
color=#fab387
# border=#a6e3a1
border_right=0
border_left=0
border_top=0
border_bottom=0
markup=pango


[battery]

[time]
command=date '+%a %Y-%m-%d %I:%M%p'
interval=5

